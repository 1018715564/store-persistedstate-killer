{
  "compilerOptions": {
    "target": "esnext",
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "baseUrl": "src",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "typeRoots": ["./typings", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
